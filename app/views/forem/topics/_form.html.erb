<%= simple_form_for [forem, @forum, @topic] do |f| %>
  <div class= "your-comment">
  <%= f.input :subject %>

  <%= f.simple_fields_for :posts do |post| %>
    <%= render :partial => "forem/posts/form", :locals => { :f => post }%>
  </div>
  <% end %>

  <%= f.button :submit, :class => 'btn btn-primary btn-small'  %>
<% end %>
