<div class= "row">
  <div class= "span9">
    <a name='post-<%= post.id %>'></a>
    <div id='post_<%= post_counter + 1 %>' class='post <%= cycle('odd', 'even') -%>'>
      <div class= "row-fluid">
        <div class= "span2">
          <div class='user'>
            <div class='username'>
              <%= link_to_if Forem.user_profile_links, post.user, [main_app, post.user] %>
            </div>
            <div class='icon'><%= forem_avatar(post.user, :size => 60) %>
            </div>
        </div>
      </div>
      <div class= "span10">
        <div class='contents'>
          <% if post.pending_review? %>
            <div class='moderation'>
              <%= t(".pending_review") %>
              <% if forem_admin_or_moderator?(post.topic.forum) %>
                <% if local_assigns[:mass_moderation] %>
                  <%= render "forem/posts/moderation_tools", :post => post %>
                <% else %>
                  <%= form_tag forem.forum_moderate_posts_path(post.topic.forum), :method => :put do %>
                    <%= render "forem/posts/moderation_tools", :post => post %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <div class='row-fluid'>
            <div class='span6'>
              <a href='#post-<%= post.id %>'>
                <time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time>
              </a>
              <span class = "forem_votes">
                <%= pluralize post.reputation_for(:votes), "vote" %>
              <% if forem_user && !forem_user.voted_for?(post) %>
                |<%= link_to "up", vote_topic_post_path(post.topic_id, post, type: "up"), method: "post" %>
                |<%= link_to "down", vote_topic_post_path(post.topic_id, post, type: "down"), method: "post" %>
              <% end %>
              </span>
            </div>
            <div class='span6 align-right'>
              <% if forem_user %>
                <% unless forem_user.voted_for_spam?(post) %>
                    <%= link_to(spam_topic_post_path(post.topic_id, post), method: "post", :title => t('.spam')) do %>
                      <i class='icon-ban-circle'></i>
                    <% end %>
                  <% end %>
                <% if post.owner_or_admin?(forem_user) %>
                  <% if can?(:edit_post, post.topic.forum) %>
                    <%= link_to(forem.edit_topic_post_path(post.topic, post), :title => t('edit', :scope => 'forem.post')) do %>
                      <i class='icon-edit'></i>
                    <% end %>
                  <% end %>
                  <%= link_to(forem.topic_post_path(post.topic, post), :method => :delete, :confirm => t("are_you_sure"), :title => t('delete', :scope => 'forem.topic'))  do %>
                      <i class='icon-trash'></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>

          <%= forem_format(post.text) %>

          <% if post.reply_to %>
            <span class='in_reply_to'>
              <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user}", "#post-#{post.reply_to.id}" %>
            </span>
          <% end %>

        </div>
      </div>
    </div>
    </div>
    <hr>
  </div>
</div>
