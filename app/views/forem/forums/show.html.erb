<div class= "row">
  <div class= "span12">
    <%= render :partial => 'forem/forums/head', :locals => { :forum => @forum } %>

    <%= forem_pages_widget(@topics) %>
  </div>
</div>
<div class= "row">
  <div class= "span9">
    <table class='topics table'>
      <thead>
        <tr class= 'info'>
          <th class="byline span7"><%= t('forem.topic.headings.topic') -%></th>
          <th class="latest-post span3"><%= t('forem.topic.headings.latest') -%></th>
          <th class="posts-count align-center span1"><%= t('forem.topic.headings.posts') -%></th>
          <th class="views-count align-center span1"><%= t('forem.topic.headings.views') -%></th>
        </tr>
      </thead>
      <tbody>
        <% if @topics.empty? %>
          <tr><td colspan='5' align='center'><%= t('forem.topic.none') %></td></tr>
        <% end %>
        <%= render @topics %>
      </tbody>
    </table>
  </div>
  <div class= "span3">
  </div>
</div>
  <%= forem_pages_widget(@topics) %>
