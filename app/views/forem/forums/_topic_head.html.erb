
<div class= "row">
  <div class= "span12">
    <div id='forum'>
      <h3><%= link_to t('forem.forum.forums'), forem.root_path %> &raquo; <%= link_to forum.title, [forem, forum] %></h3>
      <small><%= forum.description %></small>
      <menu id='forum_topic_links'>
        <% unless @topic.try(:new_record?) %>
          <% if can? :create_topic, @forum %>
            <%= link_to t('forem.topic.links.new'), forem.new_forum_topic_path(forum), :class => 'btn btn-success btn-mini' %>
          <% end %>
        <% end %>
        <% if @topic %>
          <%= link_to t('forem.topic.links.back_to_topic'), forem.forum_topic_path(forum, @topic) %>
        <% end %>
      </menu>
    </div>
  </div>
</div>

